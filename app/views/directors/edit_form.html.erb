<h1>Edit Director</h1>

<form action="/update_director/<%=@director.id%>">
  <div>
    <label for="director_dob">DOB:</label>
    <input id="director_dob" type="text" name="the_dob" value="<%= @director.dob %>">
  </div>
  <div>
    <label for="director_name">Name:</label>
    <input id="director_name" type="text" name="the_name" value="<%= @director.name %>">
  </div>
  <div>
    <label for="director_bio">Bio:</label>
    <input id="director_bio" type="text" name="the_bio" value="<%= @director.bio %>">
  </div>
  <div>
    <label for="director_image_url">Image:</label>
    <input id="director_image_url" type="text" name="the_image_url" value="<%= @director.image_url %>">
  </div>
  <div>
    <button>Update Director Entry</button>
  </div>
</form>
